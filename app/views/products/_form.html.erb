<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

    <%= form.text_field :name, placeholder: "Enter product name", class: "form-control" %>
  </div>

  <div class="field">
    <h4>Enter price: $ <%= form.text_field :price %></h4>
  </div>

  <div class="field">
    <h4>Enter quantity:
    <%= form.number_field :quantity, min: 0 %></h4>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder: "Add a description", class: "form-control" %>
  </div>

  <div class="form-group">
    <h4>Upload a photo:</h4>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="field">
  <h4>Select a Category</h4>
    <%= form.select :category_id, @categories.collect { |c| [c.name, c.id]} , {include_blank: "Please choose a category"} %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :brand, placeholder: "Enter Brand", class: "form-control" %>
  </div>

  <div class="field">
  <h4>Add a rating: 
    <%= form.number_field :rating, min: 0, max: 5 %></h4>
  </div>

  

  <div class="actions">
    <%= form.submit "Update Inventory", class: "btn btn-primary" %>
  </div>
<% end %>
